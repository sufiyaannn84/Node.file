pipeline {
  agent any

  environment {
    IMAGE_NAME = "node-file-app"
    CONTAINER_NAME = "node-file-container"
    INTERNAL_PORT = "3000"   // port inside container
    HOST_PORT = "3000"       // port on your EC2 or server
  }

  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/sufiyaannn84/Node.file.git', branch: 'main'
      }
    }

    stage('Build Docker Image') {
      steps {
        sh "docker build -t ${IMAGE_NAME}:latest ."
      }
    }

    stage('Stop Existing Container') {
      steps {
        sh """
          if [ \$(docker ps -aq -f name=${CONTAINER_NAME}) ]; then
            docker stop ${CONTAINER_NAME} || true
            docker rm ${CONTAINER_NAME} || true
          fi
        """
      }
    }

    stage('Run Container') {
      steps {
        sh "docker run -d --name ${CONTAINER_NAME} -p ${HOST_PORT}:${INTERNAL_PORT} ${IMAGE_NAME}:latest"
      }
    }
  }

  post {
    success {
      echo "✅ App deployed successfully!"
    }
    failure {
      echo "❌ Deployment failed. Check logs!"
    }
  }
}
